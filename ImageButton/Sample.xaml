<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:ObjectX.Forms;assembly=ImageButton"
	x:Class="ImageButton.Sample">
	<ContentPage.Content>
		<Grid
			VerticalOptions="Center"
			HeightRequest="45"
			Padding="10,0,10,0"
			RowSpacing="0"
			ColumnSpacing="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="4" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="4" />
			</Grid.RowDefinitions>

			<controls:ImageButton
				Grid.Row="1"
				Image="favorite_deselected.png"
				SelectedImage="favorite_selected.png"
				VerticalOptions="FillAndExpand"
				IsSelected="{Binding IsSelected}"
				Command="{Binding ToggleFavoriteCommand}"
				IsEnabled="{Binding CanExecuteToggleFavoriteCommand}" />
			
			<controls:ImageButton
				Grid.Row="1"
				Grid.Column="1"
				Image="icon_share.png"
				VerticalOptions="FillAndExpand" />
			
			<controls:ImageButton
				Grid.Row="1"
				Grid.Column="2"
				Image="icon_send_to_friend.png"
				VerticalOptions="FillAndExpand" />
		</Grid>
	</ContentPage.Content>
</ContentPage>
